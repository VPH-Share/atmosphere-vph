= form_tag(atmosphere.user_vphticket_omniauth_callback_path, id: 'new_vph_ticket_user' ) do
  = password_field_tag :ticket, nil, {class: 'form-control', placeholder: t('devise.ticket')}

  - if devise_mapping.rememberable?
    .clearfix.remember
      %label.checkbox.remember_me
        = check_box_tag :remember_me
        %span= t('devise.remember_me')

  .login-buttons
    = submit_tag t('devise.login'), class: 'btn btn-success'
    .pull-right= link_to t('devise.forgot_your_password'), new_password_path(resource_name), :class => 'btn btn-default'
